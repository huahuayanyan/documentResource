  <!-- 库存冲正获取担保合同信息查询-->
  <select id="getContSlaveAndMortgageInfo" resultMap="BaseResultMap"  parameterClass="java.util.HashMap" >
    select bpmbi.* ,T1.MORTGAGE_NAME MORTGAGE_LEVEL_ONENAME, T2.MORTGAGE_NAME MORTGAGE_LEVEL_TWONAME, T3.MORTGAGE_NAME MORTGAGE_LEVEL_THREENAME 
    from  B_CRR_GNTY_CON bcgc
    	inner join B_PBC_MTG_BASE_INFO bpmbi on bcgc.con_id = bpmbi.slave_contno
    	left join B_PBC_MTG_CLASS T1 on bpmbi.MORTGAGE_LEVEL_ONE = T1.MORTGAGE_CODE
    	left join B_PBC_MTG_CLASS T2 on bpmbi.MORTGAGE_LEVEL_TWO = T2.MORTGAGE_CODE
    	left join B_PBC_MTG_CLASS T3 on bpmbi.MORTGAGE_LEVEL_Three = T3.MORTGAGE_CODE
    where bpmbi.quantity>0
   	 <isNotEmpty prepend="and" property="conId">
        bcgc.con_id = #conId:VARCHAR#
    </isNotEmpty>
     <isNotEmpty prepend="and" property="mortgageNo">
        bpmbi.mortgage_no = #mortgageNo:VARCHAR#
    </isNotEmpty>
    order by bpmbi.mortgage_no desc
  </select>
  <!-- 个数查询 -->
  <select id="countContSlaveAndMortgageInfo" parameterClass="java.util.HashMap" resultClass="java.lang.Integer" >
    select count(bcgc.CON_ID)
    from  B_CRR_GNTY_CON bcgc, B_PBC_MTG_BASE_INFO bpmbi
    where 1=1
   	and bcgc.con_id = bpmbi.slave_contno  and  bpmbi.quantity>0
   	 <isNotEmpty prepend="and" property="conId">
        bcgc.con_id = #"conId":VARCHAR#
    </isNotEmpty>
     <isNotEmpty prepend="and" property="mortgageNo">
        bpmbi.mortgage_no = #mortgageNo:VARCHAR#
    </isNotEmpty>
  </select>
  
